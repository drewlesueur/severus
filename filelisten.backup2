#!/bin/bash

pkill severusinotifywait
if [ "$1" = "inotify" ]
then
./severusinotifywait -mr --timefmt '%d/%m/%y %H:%M' --format '%T %w %f' \
  -e close_write . | while read date file time dir; do
    echo ${file}
    if [[ "$file" =~ coffee ]]
    then 
      echo "cuaffay"
      ./runserver
    fi   
  done
  kill $$
else
 echo "got here!!!!"
 kill `cat filelisten.txt`
 echo killed process
 cat filelisten.txt
 sudo nohup ./filelisten inotify &
 #sudo ./filelisten inotify
 echo $! > filelisten.txt
fi

